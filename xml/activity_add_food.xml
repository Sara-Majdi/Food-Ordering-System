<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addFood">

    <include layout="@layout/app_header"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="63dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/food_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/baseline_account_circle_24"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/food_name"
            android:layout_below="@+id/food_picture"
            android:hint="Food Name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/food_desc"
            android:layout_below="@+id/food_name"
            android:hint="Food Desc"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/confirmAdd"
            android:text="ADD"
            android:layout_below="@+id/food_desc"
            android:background="@drawable/custom_button"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="105dp"/>

    </RelativeLayout>

</RelativeLayout>